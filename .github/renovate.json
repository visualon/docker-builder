{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "visualon/renovate-config",
    "visualon/renovate-config:automergePatch",
    ":automergeMinor"
  ],
  "labels": ["deps"],
  "digest": {
    "extends": ["schedule:daily"]
  },
  "packageRules": [
    {
      "packageNames": ["git"],
      "matchPaths": ["windows/**"],
      "versioning": "loose",
      "allowedVersions": "/^v\\d+\\.\\d+\\.\\d+\\.windows\\.\\d+$/"
    },
    {
      "packageNames": ["kubernetes-sigs/kustomize"],
      "extractVersion": "^kustomize\\/v(?<version>\\d+\\.\\d+\\.\\d+)$"
    },
    {
      "description": "Reset node to docker versioning",
      "matchPackageNames": ["node"],
      "matchDatasources": ["docker"],
      "versioning": "docker"
    }
  ]
}
